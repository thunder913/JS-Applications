<div class=" mt-3 ">
    <div class="row d-flex d-wrap">
        
        <div class="card-deck d-flex justify-content-center">
                {{#each movies}}
                    <div class="card mb-4">
                        <img class="card-img-top" src="{{image}}" alt="Card image cap" width="400">
                        <div class="card-body">
                            <h4 class="card-title">{{title}}</h4>
                        </div>
                        <div class="card-footer">
                            <a href="/details/{{uid}}"><button type="button" class="btn btn-info">Details</button></a>
                        </div>
                    </div>
                {{/each}}
        </div>
    </div>
</div>